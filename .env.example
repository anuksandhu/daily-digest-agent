# Daily Digest - Environment Variables
# Copy this file to .env and fill in your API keys
# NEVER commit .env to version control!

# ============================================================================
# Required: Google Gemini API
# ============================================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ============================================================================
# Required: Weather Data
# ============================================================================
# Get your API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# ============================================================================
# Optional: Enhanced Features
# ============================================================================
# For web search via MCP (optional but recommended)
# Get your API key from: https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here

# For sports data (optional - will use mock data if not provided)
# Options: The Sports DB (free), ESPN API, etc.
SPORTS_API_KEY=your_sports_api_key_here

# For tech news (optional - will use mock data if not provided)
# Get your API key from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# For market data (optional - will use mock data if not provided)
# Get your API key from: https://www.alphavantage.co/
FINANCE_API_KEY=your_finance_api_key_here

# ============================================================================
# Configuration
# ============================================================================
# Default location for weather
DEFAULT_LOCATION=San Jose, CA

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable detailed tracing (true/false)
ENABLE_TRACING=true
